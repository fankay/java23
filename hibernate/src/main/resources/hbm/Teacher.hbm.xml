<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.kaishengit.pojo.Teacher" table="teacher">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="teacherName" column="teacher_name"/>

        <!--
            多对多
            name : set集合属性的名称
            table: 关系表的名称
            inverse : true 放弃关系维护
        -->
        <set name="studentSet" table="teacher_student" inverse="true">
            <!--column: 自己(teacher)在关系表中的外键名称-->
            <key column="teacher_id"></key>
            <!--class:set集合中的类型  column:该类型在关系表中的外键名称-->
            <many-to-many class="com.kaishengit.pojo.Student" column="student_id"/>
        </set>
    </class>
</hibernate-mapping>